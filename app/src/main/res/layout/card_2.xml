<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <!-- Bottom View Start-->
    <LinearLayout
        android:background="#f0f0f0"
        android:id="@+id/bottom_wrapper"
        android:layout_width="192dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">
        <!--What you want to show-->

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">


            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fb"
                android:id="@+id/facebooklogo"
                />

            <TextView
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/facebooklogo"
                android:layout_alignTop="@+id/facebooklogo"
                android:layout_alignBottom="@id/facebooklogo"
                android:text="Share"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:background="#ffffff"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_textsms_black_48dp"
                android:id="@+id/message"
                android:layout_below="@+id/facebooklogo"
                android:onClick="startSMS"
                android:layout_marginTop="1dp"
                />

            <TextView
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/message"
                android:layout_alignTop="@+id/message"
                android:layout_alignBottom="@id/message"
                android:text="SMS"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:background="#ffffff"
                android:onClick="startSMS"/>

        </RelativeLayout>
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--What you want to show in SurfaceView-->

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/card"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/img1"
                android:id="@+id/banner">
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="Arial"
                    android:textSize="20sp"
                    android:textColor="@android:color/darker_gray"
                    android:background="@android:color/background_dark"
                    android:id="@+id/event_price"
                    android:text="Free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/event_name"
                    android:padding="8dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@android:color/background_dark"
                    android:fontFamily="Arial"
                    android:textSize="20sp"
                    android:id="@+id/event_name"
                    android:text="Long event name is going to be written here"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_below="@id/banner"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:id="@+id/imageView"
                android:src="@drawable/arrow"></ImageView>
            <TextView
                android:id="@+id/event_distance"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/banner"
                android:layout_marginLeft="40dp"
                android:text="100m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_time"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/event_distance"
                android:text="time"
                android:textSize="20sp"
                android:paddingRight="8dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:layout_below="@+id/event_description"
                android:layout_alignParentRight="true"

                android:padding="4dp"
                android:onClick="expandCard"
                android:id="@+id/event_expand"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:onClick="expandCard"
                android:text="@string/myString"
                android:layout_toLeftOf="@id/event_expand"
                android:layout_below="@+id/event_distance"
                android:id="@+id/event_description"
                android:textSize="16sp"
                android:paddingBottom="16dp"/>


        </RelativeLayout>
    </LinearLayout>
    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>
