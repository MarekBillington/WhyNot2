<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/image_container"
        android:transitionName="container"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#CC000000">
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="Arial"
                android:textSize="16sp"
                android:id="@+id/event_name"
                android:transitionName="name"
                android:text="Long event name is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/event_time"
                android:transitionName="time"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="8:00pm"
                android:textSize="16sp" />
        </RelativeLayout>




    </RelativeLayout>


            <TextView
                android:textStyle="bold"
                android:fontFamily="Arial"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#CC000000"
                android:id="@+id/event_category"
                android:transitionName="category"
                android:text="Sports and Outdoors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/price_banner"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/banner"></ImageView>
    <TextView
        android:id="@+id/event_location"
        android:transitionName="address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_toRightOf="@id/event_distance"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="3F, 30 Randolph st, Eden Terrace"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/imageView"
        android:transitionName="compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"

        android:paddingTop="8dp"
        android:src="@drawable/ic_earth_grey600_24dp"></ImageView>

    <TextView
        android:id="@+id/event_distance"
        android:transitionName="distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:paddingTop="8dp"
        android:text="2.4km"
        android:textSize="14sp" />

            <ImageView
                android:id="@+id/watchlist_icon"
                android:transitionName="compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_container"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"

                android:paddingTop="8dp"
                android:src="@drawable/ic_pin_grey600_24dp"></ImageView>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_below="@id/event_time"-->
                <!--android:text="$20"-->
                <!--android:id="@+id/event_price"-->
                <!--android:layout_marginRight="8dp"-->

                <!--android:textSize="16sp"-->
                <!--android:padding="1dp"/>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

